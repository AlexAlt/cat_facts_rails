<h1>Welcome to Cat Facts</h1>
<p><%= link_to "Send New Cat Fact", new_message_path %></p>
<p><%= link_to "Contacts", contacts_path %></p>
<hr>
<h3>Sent Facts:</h3>
<ul>
  <% @messages.each do |message| %>
    <li><%= link_to "To #{message.to}, #{message.created_at.strftime('at %I:%M%p')}", message %></li>
  <% end %>
</ul>
